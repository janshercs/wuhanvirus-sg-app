                  <div class="box-left">
                    <span><%= i+1 %></span>
                  </div>
                  <div class="box-right">
                    <h3 class="p-title"><%= article.headline %></h3>
                    <div class="p-icons">
                      213 likes . 124 comments
                    </div>
                  </div>
                </div>
              </a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>


